sudo apt install -y gperf
sudo apt install -y autoconf
sudo apt install -y flex
sudo apt install -y bison
sudo apt install -y zlib1g-dev
sudo apt install -y tcl-dev
chmod -R u+rw src/vendor/stp
sudo chown -R $USER:$USER src/vendor/stp
make -C src/vendor/stp clean
sudo chown -R $USER:$USER inst
sudo chown -R $USER:$USER .
chmod -R u+rwX inst
make install-src -j$(nproc)
export PATH=$PWD/inst/bin:$PATH
echo 'export PATH=$HOME/bsc/inst/bin:$PATH' >> ~/.bashrc
source ~/.bashrc
bsc -help
